extends layout

block content
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    a.navbar-brand(href='#' style="margin-left:3%;") done
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item.active
          a.nav-link(href='#')
            | Home 
          span.sr-only (current)
        li.nav-item
          a.nav-link(href='#about_us') About
        li.nav-item.dropdown
          a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            | Services
          .dropdown-menu(aria-labelledby='navbarDropdown')
            a.dropdown-item(href='#') Action
            a.dropdown-item(href='#') Another action
            .dropdown-divider
            a.dropdown-item(href='#') Something else here
        li.nav-item
          a.nav-link(href='#') The Team
        li.nav-item
          a.nav-link(href='#') Contact Us
      form.form-inline.my-2.my-lg-0
        input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
        button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
  .jumbotron(style="background:#fff; margin-bottom:0; margin-top:0; ")
    .container#edit_job_title
      center
        h1.animation-element.slide-left #{title}
        br
    .container#edit_jobs
      center
        form.edit_job.animation-element.slide-left(method='POST', action='/jobs/edit/'+job._id)
          .form-group
            label.animation-element.slide-left Title:
            input.form-control.form-input.animation-element.slide-left(name='title', type='text', value=job.title)
          .form-group
            label.animation-element.slide-left Posted By:
            input.form-control.form-input.animation-element.slide-left(name='postedby', type='text', value=job.postedby)
          .form-group
            label.animation-element.slide-left Body:
            textarea.form-control.form-input.animation-element.slide-left(name='body')= job.body
          .form-group
            label.animation-element.slide-left Amount:
            input.form-control.form-input.animation-element.slide-left(name='amount', type='text', value=job.amount)
          br  
          input.btn.login-btn.btn-animation.animation-element.slide-left(type='submit', value="Submit")
  footer
    br
    .container.animation-element.slide-left
      center
        table
          tr
            td
              .icon.social.fb
                i.fa.fa-facebook
            td
              .icon.social.in
                i.fa.fa-linkedin
            td
              .icon.social.tw
                i.fa.fa-twitter
    br
    .container.animation-element.slide-left
      .row
        .col
          p this a text
        .col
          p this a text
        .col
          p this a text
        .col
          p this a text

    hr
    .container.animation-element.slide-left
      center
