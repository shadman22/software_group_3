extends layout

block content
  h1 Employer Register
  form(method='POST', action='/employers/register')
    #form-group
      label Name:
      input.form-control(name='name', type='text')
    #form-group
      label Email
      input.form-control(name='email', type='text')
    #form-group
      label Username
      input.form-control(name='username', type='text')
    #form-group
      label Contact
      input.form-control(name='contact', type='text')
    #form-group
      label Password
      input.form-control(name='password', type='password')
    #form-group
      label Confirm Password
      input.form-control(name='password1', type='password')
        
    input.btn.btn-primary(type='submit', value="Submit")
