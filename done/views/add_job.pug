extends layout

block content
  .container.add_job_header
    br
    center
      h1 Welcome #{employer.name}!
      br
      h2 Post A New Job
      hr
      br
  .container.add_jobs
    br
    center
      form(method='POST', action='/jobs/add')
        .form-group
          input.form-control.form-input(name='title', type='text' placeholder="Job Title")
        br
        .form-group
          textarea.form-control.form-input(name='body' placeholder="Job Description & Requirements")
        br
        .form-group
          textarea.form-control.form-input(name='amount' placeholder="Renumeration")
        br
        center
          input.btn.login-btn.btn-animation(type='submit', value="Post Job")
          button.btn.login-btn.btn-animation(type="button" data-toggle="modal" data-target="#exampleModal") Terms      
        br
  #exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title Modal title
          button.close(type='button', data-dismiss='modal', aria-label='Close')
