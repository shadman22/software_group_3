doctype html
html
  head
    title done
    link(rel="icon" href="/imgs/logo.png")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script(src='/js/main.js')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous")
    script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
    link(href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet")
    link(rel="stylesheet" href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel="stylesheet" href='/css/style.css')
    
  body(onload="navbaranimation(); scrollsmooth();")
    div(id="fb-root")
    div(class="container")
      center
        img(src="/imgs/logo.png" height="150" width="250")
    if employer
      div.container.buttons-login
        div.row
          div.col
            center
              .dropdown.show
                a#dropdownMenuLink.btn.logout_btn.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  | #{employer.name}
                .dropdown-menu(aria-labelledby='dropdownMenuLink')
                  center
                    a.dropdown-item(href='/jobs/add') Add Jobs
                    a.dropdown-item(href='/jobs/view') View Jobs 
                    .dropdown-divider 
                    a.dropdown-item(onclick="logout();") Logout    
    
    else
      div.container.buttons-login
        div.row
          div.col
            center
              .dropdown.show
                a#dropdownMenuLink.btn.login-btn.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  | Login
                .dropdown-menu(aria-labelledby='dropdownMenuLink')
                  a.dropdown-item(href='/freelancers/login') Freelancer Login
                  a.dropdown-item(href='/employers/login') Employer Login
          .col
            center
              .dropdown.show
                a#dropdownMenuLink.btn.login-btn.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  | Register
                .dropdown-menu(aria-labelledby='dropdownMenuLink')
                  a.dropdown-item(href='/freelancers/register') Freelancer Register
                  a.dropdown-item(href='/employers/register') Employer Register  
    br                
    .jumbotron.banner
      .container.header-search
        center
          br
          h1 Welcome To Done
          h2 Make money and get your job done easy!
        center
          br
          br
          form(method='POST', action='#')
            #form-group
              //label.search-label Search
              input.form-control.search-header(name='search_header', type='text' placeholder="SEARCH")
            br    
            input.btn.btn-search-header(type='submit', value="Submit")
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href='#' style="margin-left:3%;") done
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='#')
              | Home 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='#about_us') About
          li.nav-item.dropdown
            a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              | Services
            .dropdown-menu(aria-labelledby='navbarDropdown')
              a.dropdown-item(href='#') Action
              a.dropdown-item(href='#') Another action
              .dropdown-divider
              a.dropdown-item(href='#') Something else here
          li.nav-item
            a.nav-link(href='#') The Team
          li.nav-item
            a.nav-link(href='#') Contact Us
        form.form-inline.my-2.my-lg-0
          input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
          button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
    
    
    !=messages('message', locals)
    if errors
      each error, i in errors
        center
          div(class="alert alert-danger" role="alert") #{error.msg}
    block content
      br
